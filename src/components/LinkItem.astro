---
interface Props {
  text: string;
  href: string;
}

const { text, href} = Astro.props;
---

<li
          class=`${href === "#home"
        ? "border-b-4 border-green-600"
        : "border-b-4 border-gray-600"} text-sm md:text-xl hover:scale-y-110 hover:text-primary`
        >
          <a href={href}>{text}</a>
        </li>