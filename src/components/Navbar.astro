---
import LinkItem from "./LinkItem.astro";

const path = Astro.url.pathname;
---

<header class="fixed top-0 z-10 w-full bg-white/80G">
  <nav class="flex flex-col md:flex-row items-center justify-between p-2 mx-5 gap-y-3">
    <div class="flex justify-center gap-3 items-center hover:scale-110">
      <a href="#home" class="text-sm md:text-xl font-bold italic flex gap-2"
        ><span class="special-text">MASmotor's</span> 
        <p class="">| Ingenieria Automotriz</p></a
      >
    </div>
    <div class="justify-center gap-3 items-center flex">
      <ul class="flex gap-4 items-center">
        <LinkItem href="#home" text="Inicio" />
        <LinkItem href="#services" text="Servicios" />
        <LinkItem href="#about" text="Acerca de nosotros" />
      </ul>
    </div>
  </nav>
</header>
