const marcas = [
  {
    name: "Hyundai",
    image: "/hyundai.svg",
  },
  {
    name: "Mazda",
    image: "/mazda.svg",
  },
  {
    name: "Nissan",
    image: "/nissan.svg",
  },
  {
    name: "Chevrolet",
    image: "/chevrolet.svg",
  },
  {
    name: "Ford",
    image: "/ford.svg",
  },
  {
    name: "Renault",
    image: "/renault.svg",
  },
  {
    name: "Susuki",
    image: "/susuki.svg",
  },
  {
    name: "Kia",
    image: "/kia.svg",
  },
  {
    name: "Toyota",
    image: "/toyota.svg",
  },
  {
    name: "Fiat",
